<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Calculator" parent="Theme.Material3.DynamicColors.Dark.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="Theme.Calculator" parent="Base.Theme.Calculator" />

    <style name="CalculatorButton" parent="Theme.Calculator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">30sp</item>
        <item name="android:padding">16dp</item>
        <item name="elevation">5dp</item>
        <item name="cornerRadius">45dp</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
    </style>


    <style name="CalculatorButtonLandscape" parent="Theme.Calculator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">4dp</item>
        <item name="elevation">5dp</item>
        <item name="cornerRadius">55dp</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
    </style>


    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="Theme.Calculator">
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="s">?attr/colorPrimaryInverse</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/ic_calculator_inverse</item>
    </style>
</resources>